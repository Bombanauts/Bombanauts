{
  "name": "BombermanJS",
  "version": "1.0.0",
  "description": "Bombanauts, inspired by the original Bomberman game, is a 3D multiplayer online battle arena (MOBA) game where players can throw bombs at each other, make boxes explode, and even other players! Bombs explode into a cross of fire down the aisles destroying crates that stand in their way. When the flames make contact with the wooden boxes (and players ðŸ˜ˆ) they explode!",
  "main": "webpack.config.js",
  "directories": {
    "test": "tests"
  },
  "engines": {
    "node": "7.x"
  },
  "scripts": {
    "test": "mocha --compilers js:babel-core/register tests/**/*.test.js",
    "test-watch": "mocha --compilers js:babel-register --watch tests/**/*.test.js",
    "build": "webpack --mode=production",
    "build-dev": "webpack",
    "build-watch": "npm run build-dev -- -w",
    "start": "NODE_ENV=production node server/index.js",
    "start-dev": "nodemon server/index.js",
    "heroku-postbuild": "npm run build",
    "heroku-prebuild": "npm install --dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bombanauts/Bombanauts.git"
  },
  "keywords": [
    "3d",
    "three",
    "three.js",
    "cannon",
    "cannon.js",
    "bomberman",
    "bombanauts",
    "game-development",
    "react",
    "redux",
    "sockets",
    "express",
    "javascript",
    "multiplayer"
  ],
  "author": "Sam Wheeler, Steve Kuo, Bogdan Polovko, and Damon Ye",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bombanauts/Bombanauts/issues"
  },
  "homepage": "https://github.com/bombanauts/Bombanauts#readme",
  "dependencies": {
    "cannon": "^0.6.2",
    "express": "^4.14.0",
    "express-static-gzip": "^1.1.3",
    "material-ui": "^0.16.7",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "2.2.0",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "socket.io-react": "^1.1.2",
    "three": "^0.84.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "brotli-webpack-plugin": "^1.1.0",
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "compression-webpack-plugin": "^2.0.0",
    "css-loader": "^2.1.1",
    "file-loader": "^3.0.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.11.0",
    "redux-logger": "^2.7.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2"
  }
}
